class Schema:
    def __init__(self, name):
        self.name = name
        self.fields = []
    def addField(self, field_name, field_type):
        field = Field(field_name, field_type)
        self.fields.append(field)
        return field

class Field:
    def __init__(self, name, field_type):
        self.name = name
        self.type = field_type
    def isSpatial(self):
        return self.type.startswith("nc_dim_quadtree_")
    def isCategorical(self):
        return self.type.startswith("nc_dim_cat_")
    def isTemporal(self):
        return self.type.startswith("nc_dim_time_")
    def spatialResolution(self):
        if self.isSpatial():
            return int(self.type.split('_')[-1])

# load schema
# print args.server
response = urllib2.urlopen(args.server+"/schema")
schema_json = json.loads(response.read())
# print schema_json

# 

#
# spatial field
#

name           = None
spatial_field  = None
temporal_field = None

for item in schema_json['metadata']:
    if item['key'] == 'name':
        name = item['value']

    # elif item['value'].startswith('degrees_mercator_quadtree'):
    #     spatial_field_name = item['key'].split('_')[0]
    #     spatial_resolution = int(item['value'][len('degrees_mercator_quadtree'):])
    
schema = Schema(name)

for json_field in schema_json['fields']:
    field = schema.addField(json_field['name'], json_field['type'])
    if field.isSpatial():
        spatial_field = field
    elif field.isTemporal():
        temporal_field = field


class Template:
    def __init__(self, text):
        self.text = text
        self.variables = re.findall('[$][A-Z_]+', text)
        self.instance = None
    def start(self):
        self.instance = self.text
        return self
    def set(self, i, value):
        if type(i) == int:
            self.instance = self.instance.replace(self.variables[i],value)
        elif type(i) == str:
            self.instance = self.instance.replace(i,value)
        return self
    def current(self):
        return self.instance
    

# categorical config

categorical_variable_template = Template(categorical_variable_template_text)
lst = []

for f in schema.fields:
    if f.isCategorical():
        categorical_variable_template.start().set(0, f.name)
        lst.append(categorical_variable_template.current())
categorical_config = "".join(lst)


# general config: uses categorical_config
config_template = Template(config_template_text)

config_template.start()
config_template.set('$TITLE', schema.name)
config_template.set('$SERVER', args.server)
config_template.set('$LAT_MIN', '-85')
config_template.set('$LON_MIN', '-180')
config_template.set('$LAT_MAX', '85')
config_template.set('$LON_MAX', '180')
config_template.set('$TILES_URL', "http://{s}.tile.osm.org/{z}/{x}/{y}.png")
config_template.set('$SPATIAL_RESOLUTION', str(spatial_field.spatialResolution()))
config_template.set('$SPATIAL_DIMENSION_NAME', spatial_field.name)
config_template.set('$TEMPORAL_DIMENSION_NAME', temporal_field.name)
config_template.set('$CATEGORICAL_VARIABLES',categorical_config)

ostream = open(args.output,"w") if len(args.output) else sys.stdout
ostream.write(config_template.current())
ostream.close()


