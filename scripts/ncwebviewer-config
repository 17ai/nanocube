    "url": "$SERVER", 
    "latlonbox": {
        "min": {
            "$SPATIAL_DIMENSION_NAME": [
                $LAT_MIN, 
                $LON_MIN
            ]
        }, 
        "max": {
            "$SPATIAL_DIMENSION_NAME": [
                $LAT_MAX, 
