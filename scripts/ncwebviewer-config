#################################################################################


parser = argparse.ArgumentParser();
parser.add_argument('-s', 
                    "--server", 
                    dest="server", 
                    type=str, 
                    required=True, 
                    help='Nanocube Server URL')
parser.add_argument('-o', 
                    "--output", 
                    dest="output", 
                    type=str,
                    default="",
                    required=False, 
                    help='Output configuration .json file')
args = parser.parse_args()


# { fields:
